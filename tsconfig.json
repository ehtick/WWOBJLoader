{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "ES2022",
      "DOM",
      "WebWorker"
    ],
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "strict": true,
    "composite": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": [
    "**/src/**/*.ts",
    "**/test/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/lib/**/*",
    "**/dist/**/*"
  ]
}
