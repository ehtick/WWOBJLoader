{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node16",
    "lib": [
      "ES2020",
      "DOM",
      "WebWorker"
    ],
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true,
    "strict": true,
    "composite": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "**/src/**/*.ts",
    "**/test/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/lib/**/*",
    "**/dist/**/*"
  ]
}
